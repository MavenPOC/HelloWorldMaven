<?xml version="1.0"?>
<project name="helloWorld" default="compile" xmlns:cpptasks="antlib:net.sf.antcontrib.cpptasks">
    <target name="compile">
        <mkdir dir="target/obj"/>
        <cpptasks:gcc outtype="executable" subsystem="console" outfile="target/HelloWorld" objdir="target/obj">
           <fileset dir="src/" includes="*.cpp"/>
        </cpptasks:gcc>
    </target>
</project>
