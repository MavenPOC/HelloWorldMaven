<?xml version="1.0"?>
<project name="HelloWorld" default="gcc" basedir=".">
<target name="init">
<property name="source" value="src/HelloWorld.cpp"/>
<property name="build" location="build"/>
</target>
<target name="gcc" depends="init">
<mkdir dir="${build}"/>
<exec dir="." executable="g++">
<arg line="-o"/>
<arg line="${build}/test"/>
<arg line="${source}"/>
</exec>
</target>
</project>
