<project name="HelloWorld" basedir=".">
	<target name="init">
		<property name="source" value="src/Hangman.cpp" />
		<property name="build" location="build" />

		<!--GCC Compile-->
		<mkdir dir="${build}" />
		<exec dir="." executable="g++">
			<arg line="-o" />
			<arg line="${build}/test" />
			<arg line="${source}" />
		</exec>
		
		<exec dir="target/obj" executable="HelloWorld" failonerror="true">
		</exec>

